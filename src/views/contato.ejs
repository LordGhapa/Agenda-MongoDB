<%- include("./includes/head.ejs")%>
<%- include("./includes/nav.ejs")%>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class=" text-center">Contato</h1>
      <p class="text-center lead">Crie ou Edite Seus Contatos Abaixo:.</p>
      
      
    <%- include("./includes/messages")%>

 <% if (contato._id){ %> 
  <form class="form-contato" action='/contato/edit/<%= contato._id %>' method="POST">
    <% } else{ %>
      
      <form class="form-contato" action="/contato/register" method="POST">
      <% } %> 
      
      
        
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="nomeCadastro">Nome </label>
          <input
         
          value= "<%=contato.nome%>"
          type="text"
            class="form-control"
            name="nome"
            id="nomeCadastro"
            placeholder="Coloque o nome"
            required
          />
        </div>
        <div class="form-group">
          <label for="sobrenomeCadastro">Sobrenome </label>
          <input
          value= "<%=contato.sobrenome%>"
            type="text"
            class="form-control"
            name="sobrenome"
            id="sobrenomeCadastro"
            placeholder="Coloque o sobrenome"
          />
        </div>
        <div class="form-group">
          <label for="emailCadastro">Email </label>
          <input
          value= "<%=contato.email%>"
            type="email"
            class="form-control"
            name="email"
            id="emailCadastro"
            placeholder="Coloque o email"
          />
        </div> 
        <div class="form-group">
          <label for="telCadastro">Telefone </label>
          <input
          value= "<%=contato.telefone%>"
            type="telefone"
            class="form-control"
            name="telefone"
            id="telCadastro"
            placeholder="Coloque o telefone"
          />
        </div>
      

        <button type="submit" class="btn btn-primary my-2">
         Salvar
        </button>
      </form>


    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include("./includes/footer.ejs")%>
   