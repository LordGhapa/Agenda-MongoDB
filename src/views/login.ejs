<%- include("./includes/head.ejs")%> <%- include("./includes/nav.ejs")%>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça um login ou crie sua conta abaixo</p>
      <%- include("./includes/messages")%>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se não tiver conta, preencha o formulário abaixo:</p>
          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label for="emailCadastro">Seu E-mail  </label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="emailCadastro"
                placeholder="Coloque seu Email"
                required
              />
            </div>
            <div class="form-group">
              <label for="senhaCadastro">Sua Senha </label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="senhaCadastro"
                placeholder="Coloque sua senha"
                autocomplete="off"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary my-2">
              Criar minha conta
            </button>
          </form>
        </div>

        <div class="col-lg my-1">
          <h4>Faça seu login</h4>
          <p>Se você ja tem uma conta, faça login abaixo:</p>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label for="emailLogin">Seu E-mail </label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="emailLogin"
                placeholder="Coloque seu Email"
                required
              />
            </div>
            <div class="form-group">
              <label for="senhaLogin">Sua Senha </label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="senhaLogin"
                placeholder="Coloque sua senha"
                autocomplete="off"
                required
              />
            </div>

            <button type="submit" class="btn btn-primary my-2">
             Entrar
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include("./includes/footer.ejs")%>
